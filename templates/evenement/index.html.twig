{% extends 'base.html.twig' %}

{% block title %}Evenements pass√©s{% endblock %}

{% block body %}
    <div class="container">
        <div class="timeline">
            <div class="swiper-container">
                <div class="swiper-wrapper">

                    {% for evenement in evenement %}
                        <div class="swiper-slide" style="background-image: url({{ asset(evenement.image) }}" data-year="2013">
                            <div class="swiper-slide-content"><span class="timeline-year">{{ evenement.date | date('d/m/Y') }}</span>
                                <h4 class="timeline-title">{{ evenement.titre }}</h4>
                                <p class="timeline-text">{{ evenement.description }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
    </div>
{% endblock %}